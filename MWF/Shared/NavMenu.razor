@inject NavigationManager NavManager;

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow p-0">
    <div class="container-fluid" style="background: rgb(200, 180, 140); color:rgb(34, 60, 97);">
        <a class="navbar-brand" asp-page="/Index"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

            <div class="frame">
                <img src="./GalaryPic/logo.jpg" alt="Logo picture" />
            </div>

            <div class="button-container">
                <button class="btn-Menu" @onclick="Home">Home</button>
                <button class="btn-Menu" @onclick="About">About</button>
                <button class="btn-Menu" @onclick="Gallery">Gallery</button>
                <button class="btn-Menu" @onclick="Review">Review</button>
                <button class="btn-Menu" @onclick="Receipt">Receipt</button>
                <button class="btn-Menu" @onclick="Contact">Contact Us</button>
                <button class="btn-Menu">Archived</button>
                <button class="btn-Menu">Donate Now</button>
            </div>



            <button type="button" class="btn-Menu" onclick="window.location.href='';">
                Archived
            </button>
            <button type="button" class="btn-Menu" href="window.location.href='https://donate.mumtazwelfare.org/';">
                Donate Now
            </button>
        </div>
    </div>
</nav>



@code {
    public void Home() { NavManager.NavigateTo("/", true); }
    public void About() { NavManager.NavigateTo("/About", true); }
    public void Gallery() { NavManager.NavigateTo("/Gallery", true); }
    public void Review() { NavManager.NavigateTo("/Review", true); }
    public void Receipt() { NavManager.NavigateTo("/DonationList", true); }
    public void Contact() { NavManager.NavigateTo("/Contact", true); }
}

<style>
    /*  Menu Buttom */
    .button-container {
        display: flex;
        justify-content: space-around; /* Space between the buttons */
        gap: 15px; /* Adjust this value to control the space between buttons */
        padding: 10px; /* Padding around the container */
    }
         

    .btn-Menu {
        background-image: linear-gradient(#0dccea, #0d70ea);
        border: 0;
        border-radius: 4px;
        box-shadow: rgba(0, 0, 0, .3) 0 5px 15px;
        box-sizing: border-box;
        color: #fff;
        cursor: pointer;
        font-family: Montserrat, sans-serif;
        font-size: .9em;
        margin: 5px;
        padding: 10px 15px;
        text-align: center;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

        .btn-Menu:hover {
            transform: scale(1.1); /* Slightly increase size on hover */
        }

    /*  Menu Buttom END */

    .navbar {
        height: 75px;
    }





    .frame {
        width: 55px; /* Set the width of the frame */
        height: 55px; /* Set the height of the frame */
        border: 5px solid solid navy; /* Frame border */
        border-radius: 20%; /* Rounded frame */
        overflow: hidden; /* Hide any overflow outside the frame */
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .frame img {
            width: 100%; /* Stretch the image to fill the frame horizontally */
            height: 100%; /* Stretch the image to fill the frame vertically */
            object-fit: cover; /* Ensures the image covers the frame while being stretched */
            border-radius: 20%; /* Same border-radius as the frame for a consistent look */
        }

</style>