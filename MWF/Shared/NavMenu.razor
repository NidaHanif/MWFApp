@inject NavigationManager NavManager;
@inject IJSRuntime JS;

<div class="container" id="mainMenu">
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow p-0">
        <div class="container-fluid navbar-custom">
            <a class="navbar-brand" asp-page="/Index"></a>

            <!-- Logo Frame -->
            <div class="frame-logo">
                <img src="./GalaryPic/logo.jpg" alt="Logo picture" />
            </div>

            <!-- Navbar Toggle for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>



            <!-- Navbar Content -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarNav">


                <!-- Navigation Buttons with Tooltips -->
                <button class="btn-menu active" @onclick="Home" data-bs-toggle="tooltip" title="Go to Home Page">Home</button>
                <button class="btn-menu" @onclick="About" data-bs-toggle="tooltip" title="Learn more About Us">About</button>
                <button class="btn-menu" @onclick="Gallery" data-bs-toggle="tooltip" title="View Our Gallery">Gallery</button>
                <button class="btn-menu" @onclick="Review" data-bs-toggle="tooltip" title="Check out Reviews">Review</button>
                <button class="btn-menu" @onclick="Receipt" data-bs-toggle="tooltip" title="View Receipts">Receipt</button>
                <button class="btn-menu" @onclick="Contact" data-bs-toggle="tooltip" title="Contact Us">Contact</button>
                <button class="btn-menu" @onclick="Archived" data-bs-toggle="tooltip" title="View Archived Information">Archived</button>
                <button class="btn-menu" @onclick="Donate" data-bs-toggle="tooltip" title="Donate Now to Support Us">Donate</button>
            </div>
        </div>
    </nav>
</div>

@code {
    // Navigation Methods
    public void Home() { NavManager.NavigateTo("/", true); }
    public void About() { NavManager.NavigateTo("/About", true); }
    public void Gallery() { NavManager.NavigateTo("/Gallery", true); }
    public void Review() { NavManager.NavigateTo("/Review", true); }
    public void Receipt() { NavManager.NavigateTo("/DonationList", true); }
    public void Contact() { NavManager.NavigateTo("/Contact", true); }
    public void Archived() { NavManager.NavigateTo("/Archived", true); }
    public void Donate() { NavManager.NavigateTo("https://donate.mumtazwelfare.org", true); }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize tooltips after first render
            await JS.InvokeVoidAsync("initializeTooltips");
        }
    }
}

<style>
    /* Navbar Styling */
    .navbar-custom {
        background-color: rgb(200, 180, 140);
        color: rgb(34, 60, 97);
    }

    .navbar {
        height: 75px;
    }

    /* Button Container */
    .button-container {
        display: flex;
        flex-wrap: wrap; /* Make buttons wrap on smaller screens */
        justify-content: center;
        gap: 15px;
        padding: 10px;
    }

    /* Buttons Styling */
    .btn-menu {
        background-image: linear-gradient(#0dccea, #0d70ea);
        border: none;
        border-radius: 4px;
        box-shadow: rgba(0, 0, 0, 0.3) 0px 5px 15px;
        color: #fff;
        cursor: pointer;
        font-family: Montserrat, sans-serif;
        font-size: 0.9em;
        padding: 10px 20px;
        margin: 2px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */
    }

        .btn-menu:hover {
            transform: scale(1.1);
            box-shadow: rgba(0, 0, 0, 0.5) 0px 8px 20px; /* Enhance shadow on hover */
        }

    /* Frame for the Logo */
    .frame-logo {
        width: 55px;
        height: 55px;
        min-height: 55px;
        min-width: 55px;
        max-height: 55px;
        max-width: 55px;
        border: 5px solid navy;
        border-radius: 50%; /* Circle frame */
        overflow: hidden;
        display: flex;
        justify-content: left;
        align-items: start;
        margin-right: 5px;
    }

        .frame-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

</style>

<script>
    // JavaScript function to initialize Bootstrap tooltips
    window.initializeTooltips = function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    };
</script>
