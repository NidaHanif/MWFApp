
@page "/DonationList"
@inject DonationService _donationService

@using MWF.Pages;
@using MWF.Models;
@using MWF.Codes;
@using System.Data;
@using System.Data.SQLite;


<h3>Donation List</h3>

<table class="table">
    <thead>
        <tr>
            <th>Receipt Number</th>
            <th>Receipt Date</th>
            <th>Donor Name</th>
            <th>Amount</th>
            
            <th><a class="btn btn-light" style="width:30%" href="/DonationForm" role="button"><i class="bi bi-plus me-2"></i>
            
            </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in DonationService.GetDonations())
        {
            <tr>
                <td>@item.Rec_No</td>
                <td>@item.Rec_Date.ToString("yyyy-MM-dd")</td>
                <td>@item.DonorName</td>
                <td>@item.Amount</td>
                @*<td><button @onclick="() => DonationEdit(item.DonorId)">Edit</button></td>*@
                <td>
                <a class="btn btn-danger" style="width:20%" href=""><i class="bi bi-pencil-fill me-2"></i></a>
                <button class="btn btn-primary" style="width:20%"><i class="bi bi-trash3-fill me-2"></i></button>
                <a class="btn btn-secondary" style="width:20%" href=""><i class="bi bi-printer-fill me-2"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

